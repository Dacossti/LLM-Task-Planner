<root main_tree_to_execute="MainTree"> 
  <BehaviorTree ID="MainTree">

    <Fallback name="NavigateWithRecovery">
      <Sequence name="NavigateWithReplanning">
        <RateController hz="1.0">
          <Sequence name="PlanningAndControl">
            <!-- Use ThetaStar as the planner_id -->
            <ComputePathToPose goal="{goal}" path="{path}" planner_id="ThetaStar"/>
            <ClearEntireCostmap name="ClearGlobalCostmap" service_name="global_costmap/clear_entirely_global_costmap"/>
            <FollowPath path="{path}" controller_id="FollowPath"/>
            <ClearEntireCostmap name="ClearLocalCostmap" service_name="local_costmap/clear_entirely_local_costmap"/>
          </Sequence>
        </RateController>
      </Sequence>

      <Fallback name="RecoveryFallback">
        <GoalUpdated/>
        <RoundRobin name="RecoveryActions">
          <Sequence name="ClearingActions">
            <ClearEntireCostmap name="ClearLocalCostmap-Recovery" service_name="local_costmap/clear_entirely_local_costmap"/>
            <ClearEntireCostmap name="ClearGlobalCostmap-Recovery" service_name="global_costmap/clear_entirely_global_costmap"/>
          </Sequence>
          <Spin spin_dist="1.57"/>
          <Wait wait_duration="5"/>
          <BackUp backup_dist="0.30" backup_speed="0.05"/>
        </RoundRobin>
      </Fallback>

    </Fallback>

  </BehaviorTree>
</root>
