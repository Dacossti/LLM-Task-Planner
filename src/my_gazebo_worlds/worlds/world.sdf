<sdf version="1.6">
  <world name="kitchen_dining">

    <!-- Ground Plane -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- Sun (default Gazebo light) -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- Kitchen and Dining Model -->
    <include>
      <uri>model://kitchen_dining</uri>
      <pose>0 0 0 0 0 0</pose>
    </include>

    <!-- Custom Directional Light for Visibility -->
    <light name="sun_light" type="directional">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 10 0 0 0</pose>
      <diffuse>1 1 1 1</diffuse>
      <specular>0.1 0.1 0.1 1</specular>
      <attenuation>
        <range>100</range>
        <constant>0.9</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <direction>-0.5 -0.5 -1</direction>
    </light>

    <!-- Physics Settings for Smoother Simulation -->
    <physics name="default_physics" type="ode">
      <max_step_size>0.001</max_step_size>
      <real_time_update_rate>1000</real_time_update_rate>
      <real_time_factor>1</real_time_factor>
    </physics>

  </world>
</sdf>
